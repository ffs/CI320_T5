<h3><%= @user.first_name %></h3>

<p id="notice"><%= notice %></p>
  
<table class="one-column-emphasis">
	<tbody>
		<tr>
			<td class="oce-first">First Name:</td>
			<td><%= @user.first_name %></td>
		</tr>
		<tr>
			<td class="oce-first">Last Name:</td>
			<td><%= @user.last_name %></td>
		</tr>
		<tr>
			<td class="oce-first">Email:</td>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<td class="oce-first">Role:</td>
			<td><% role = Role.find(@user.role_id) %>
				<%= role.name %>
			</td>
		</tr>
		<tr>
			<td class="oce-first">Created at:</td>
			<td><%= @user.created_at %></td>
		</tr>
		<tr>
			<td class="oce-first">Last Sign In:</td>
			<td><%= @user.last_sign_in_at %></td>
		</tr>
		<tr>
			<td class="oce-first">Sign In Count:</td>
			<td><%= @user.sign_in_count %></td>
		</tr>
	</tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-default' %>
<%= link_to 'Back', users_path, class: 'btn btn-default' %>
