<h1>Servers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Processor</th>
      <th>Memory</th>
      <th>Storage</th>  
      <th>IP address</th>
      <th>S.O.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.server_name %></td>
        <td><%= server.cpu %></td>
        <td><%= server.memory %></td>
        <td><%= server.storage %></td>
        <td><%= server.ip_address %></td>
        <td><%= server.oper_sys %></td>
        <td>
          <%= link_to "Show", server, class: 'btn btn-primary btn-xs' %>
        </td>
        <td>
          <% if current_user.role_id != '1' %>
            <%= link_to "Edit", edit_server_path(server), class: 'btn btn-primary btn-xs' %>
          <% end %>
        </td>

        <td>
          <% if current_user.role_id != '1' %>
            <%= link_to "Destroy", server, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_server_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Server
<% end %>
