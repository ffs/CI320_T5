<h1>Listing roles</h1>




<table class="table table-striped">
  <thead>
    <tr>
      <th>Role name</th>
      <th>Role description</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_name %></td>
        <td><%= role.role_description %></td>
        <td><%= link_to 'Show', role, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_role_path(role), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_role_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Role
<% end %>