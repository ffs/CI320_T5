<h1>Listing db_insts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Db inst name</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @db_insts.each do |db_inst| %>
      <tr>
        <td><%= db_inst.db_inst_name %></td>
        <td><%= link_to 'Show', db_inst, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_db_inst_path(db_inst), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', db_inst, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_db_inst_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Database Instance
<% end %>