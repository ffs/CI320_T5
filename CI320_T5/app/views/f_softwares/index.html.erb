<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'All Softwares', softwares_path %></li>
  <li class="active"><%= link_to 'Final Softwares', f_softwares_path %></li>
  <li><%= link_to 'Intermediate Software', i_softwares_path %></li>
  <li><%= link_to 'Databases', dbs_path %></li>
</ul>

<table class ="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Processor</th>
      <th>Memory</th>
      <th>Storage</th>
      <th>Version</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @f_softwares.each do |f_software| %>
      <tr>
        <td><%= f_software.f_software_name %></td>
        <td><%= f_software.cpu %></td>
        <td><%= f_software.memory %></td>
        <td><%= f_software.storage %></td>
        <td><%= f_software.version %></td>
        <td><%= link_to 'Show', f_software, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_f_software_path(f_software), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', f_software, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_f_software_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Final Software
<% end %>

<%= link_to new_f_software_inst_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> Instantiate Final Software
<% end %>
